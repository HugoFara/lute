{% extends 'base.html.twig' %}

{% block body %}

{% if commit %}

<h1>Release info</h1>

<table>
  <tr>
    <td>Release date</td>
    <td>{{ release_date }}</td>
  </tr>
  <tr>
    <td>Tag</td>
    <td>{{ tag }}</td>
  </tr>
  <tr>
    <td>Commit</td>
    <td>{{ commit }}</td>
  </tr>
</table>

{% endif %}

<h1>Your server</h1>

<table>
  <tr>
    <td>Connection</td>
    <td>{{ symfconn }}</td>
  </tr>
  <tr>
    <td>PHP version</td>
    <td>{{ php }}</td>
  </tr>
</table>


{% if isdev %}
<br />

<h2>Environment vars (dev only)</h2>

<hr />

<p>All environment vars:</p>

<table>
  <tr><th>Key</th><th>Value</th></tr>
  {% for k, v in allenv %}
  <tr><td>{{ k }}</td><td>{{ v }}</td></tr>
  {% endfor %}
</table>

<hr />

<p>_ENV:</p>

<table>
  <tr><th>Key</th><th>Value</th></tr>
  {% for k, v in ENV %}
  <tr><td>{{ k }}</td><td>{{ v }}</td></tr>
  {% endfor %}
</table>

<hr />

<p>_SERVER:</p>

<table>
  <tr><th>Key</th><th>Value</th></tr>
  {% for k, v in SERVER %}
  <tr><td>{{ k }}</td><td>{{ v }}</td></tr>
  {% endfor %}
</table>

{% endif %}

{% endblock %}

