<html>
  <head>
    <script type="text/javascript" src="/js/jquery.js" charset="utf-8"></script>
    <style>
      .flash {
          margin-top: 20px;
          padding: 20px;
          background-color: #fff3cd;
          border-color: #ffeeba;
      }
    </style>
  </head>

  <body>

    <div id="flash" class="flash">
      <p>&quot;{{ termdto.Text }}&quot; updated.</p>
    </div>

    <script>
      let reload_text_div = function() {
        const context = window.parent.document;
        const textid = $('#textid', context).text();
        const repel = $('#thetext', context);
        repel.load(`/read/sentences/${textid}`);
      };

      $(document).ready(function() {
        top.frames.dictframe.location.href = '/read/empty';
        reload_text_div();
        $('#flash').delay(1000).fadeOut();
      });
    </script>

  </body>

</html>
